<div class="header-container">
  <h1 class="header-logo"><%= link_to "ARTMAPP", root_path %></h1>
  <nav>
    <ul>
      <% if current_user %>
      <li><%= link_to current_user.name.split.first, user_path(current_user) %></li>
      <li><%= link_to 'Logout', logout_path, id: 'logout', method: 'delete' %></li>
      <% else %>
      <li><a href="/auth/twitter">Login</a></li>
      <% end %>
    </ul>
  </nav>
</div>
